<%- include('../partials/header.ejs') %>
<div class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
      <li class="breadcrumb-item"><a href="/admin/images">Images</a></li>
      <li class="breadcrumb-item active" aria-current="page">
        <% if(typeof name != 'undefined') { %> Update: <%= name %> <% }else{ %> Create <% } %>
      </li>
    </ol>
  </nav>
  <div id="direct_upload">
    <form action="" enctype="multipart/form-data" method="post">
      <div class="form_line">
        <label for="title">Title:</label>
        <div class="form_controls">
          <input id="title" name="title" size="30" type="text"  />
        </div>
      </div>
      <div class="form_line">
        <label for="image">Image:</label>
        <div class="form_controls">
          <input id="image" name="image" type="file" />
          <input id="image_cache" name="image_cache" type="hidden" />
        </div>
      </div>
      <div class="form_line">
        <div class="form_controls">
          <input name="commit" type="submit" value="Submit Photo" />
  
        </div>
      </div>
      <input id="direct" name="direct" type="hidden" />
  </form>
</div>